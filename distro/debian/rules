#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_configure:
	sed -i 's~lib64~lib64foo~' configure
	dh_auto_configure -- --prefix=/usr --use_qt3=Y --qt3-moc-path=/usr/share/qt3/bin/moc --qt4-moc-path=/usr/share/qt4/bin/moc

override_dh_auto_clean:
	sed -i 's~lib64foo~lib64~' configure
	dh_auto_clean

override_dh_shlibdeps:
	dh_shlibdeps --exclude=im-hime.so --exclude=anthy-module.so --exclude=chewing-module.so

override_dh_gencontrol:
	dh_gencontrol
	sh debian/ckqt.sh
